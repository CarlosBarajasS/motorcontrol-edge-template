# ===================================================
# CONFIGURACIÓN DEL EDGE GATEWAY
# ===================================================

# Identificación única del cliente
CLIENT_ID=edge-gateway-001
GATEWAY_NAME=Casa Cliente 001
LOCATION=Guadalajara, Jalisco

# IP pública o accesible del gateway (para registrar streams)
# Esta IP debe ser accesible desde el servidor central
# Si el edge está en la misma red que el servidor, usar IP local
# Si está remoto, usar IP pública o dominio
GATEWAY_PUBLIC_IP=192.168.100.49

# ===================================================
# SERVIDOR CENTRAL - MQTT
# ===================================================

# Nombre del servicio Mosquitto en la red compartida
# Si edge está en misma máquina que backend: usar motor-control-mosquitto
# Si edge está remoto: usar IP pública o dominio del servidor central
MQTT_HOST=motor-control-mosquitto
MQTT_PORT=1883

# Credenciales MQTT (configurar en mosquitto del servidor)
MQTT_USERNAME=client-001
MQTT_PASSWORD=change_me_secure_password

# Intervalo de heartbeat (milisegundos)
HEARTBEAT_INTERVAL_MS=30000

# ===================================================
# MEDIAMTX
# ===================================================

# API de MediaMTX (usar nombre del servicio Docker en red edge-net)
MEDIAMTX_API_URL=http://mediamtx:9997

# Credenciales para MediaMTX API (si está configurada con autenticación)
MEDIAMTX_USERNAME=edge
MEDIAMTX_PASSWORD=edge123

# ===================================================
# SERVIDOR HTTP DEL EDGE
# ===================================================

PORT=8090

# ===================================================
# ZONA HORARIA
# ===================================================

TZ=America/Mexico_City

# ===================================================
# OPCIONAL: Backend Central HTTP (REST API)
# ===================================================

# Si también quieres comunicación HTTP además de MQTT
CENTRAL_API_URL=http://192.168.100.49/api
CENTRAL_API_TOKEN=
